{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"sourceMap": false,
		"declaration": true,
		"removeComments": false,
		"skipLibCheck": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		// "strict": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"lib": ["dom", "esnext"],
		"rootDir": "./",
		"baseUrl": "./",
		"outDir": "../dist",
    "traceResolution": true,
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }
  },
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"lib": ["esnext"],
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "./package.json"
  ]
}